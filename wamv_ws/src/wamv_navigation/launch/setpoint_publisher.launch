<?xml version="1.0"?>
<launch>

  <node pkg="wamv_navigation" type="setpoint_publisher.py" name="heading_setpoint_publisher" >
    <param name='setpoints' value='[0.3, -0.3]' />
    <param name='repeat'    value='true' />
    <param name='period'    value='15.0' />

    <remap from="setpoint"  to="/pid/heading/setpoint" />
  </node>

  <node pkg="wamv_navigation" type="setpoint_publisher.py" name="speed_setpoint_publisher" >
    <param name='setpoints' value='[0.3, -0.3]' />
    <param name='repeat'    value='true' />
    <param name='period'    value='15.0' />

    <remap from="setpoint"  to="/pid/speed/setpoint" />
  </node>

  <node pkg="wamv_navigation" type="setpoint_publisher.py" name="lateral_setpoint_publisher" >
    <param name='setpoints' value='[0.3, -0.3]' />
    <param name='repeat'    value='true' />
    <param name='period'    value='15.0' />

    <remap from="setpoint"  to="/pid/lateral/setpoint" />
  </node>

</launch>
